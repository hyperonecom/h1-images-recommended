{
  "builders": [
    {
      "type": "hyperone",
      "source_image": "ubuntu:18.04",
      "vm_type": "a1.nano",
      "vm_name": "image-builder",
      "image_name": "image-builder-ubuntu",
      "disk_size": 10,
      "ssh_keys": [
        "my-ssh"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get install -y mtools libguestfs-tools",
        "echo 'kvm' | sudo tee /etc/modules",
        "sudo update-initramfs -u"
      ]
    }
  ]
}