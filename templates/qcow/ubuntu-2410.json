{
    "variables": {
        "source_image": "fedora:32",
        "download_path": "/home/guru/image-tmpfs/image.qcow",
        "mount_qcow_path": "/home/guru/mnt-image",
        "qcow_part": "/dev/sda1",
        "qcow_boot_part": "/dev/sda13",
        "root_fs": "ext4",
        "root_fs_opts": "-E lazy_itable_init=1",
        "scripts": "./scripts/disable-llmr-mdns.sh,./scripts/fstab.sh,./scripts/ubuntu/ubuntu-2410.sh,./scripts/apt_clean.sh,./scripts/check_df.sh,./scripts/io_scheduler.sh,./scripts/patch-cloud-init.sh",
        "disk_size": "5",
        "image_name": "Ubuntu 24.10 (Oracular Oriole)",
        "ssh_name": "my-ssh",
        "image_description": "{\"arch\":\"x64\",\"distro\":\"ubuntu\",\"release\":\"24.10\",\"edition\":\"server\",\"codename\":\"oracular oriole\",\"recommended\":{\"disk\":{\"size\":20}}}",
        "network": "public",
        "vm_type": "a1.small",
        "repository": "https://packages.hyperone.cloud",
        "cli_package": "h1-cli",
        "scope_name": "HyperOne",
        "state_timeout": "10m"
    },
    "builders": [
        {
            "type": "hyperone",
            "project": "{{user `project`}}",
            "network": "{{user `network`}}",
            "disk_size": 10,
            "chroot_disk": true,
            "mount_partition": 4,
            "vm_name": "packer-ubuntu-2410-oracular",
            "source_image": "{{user `source_image`}}",
            "vm_type": "{{user `vm_type`}}",
            "ssh_keys": "{{user `ssh_name`}}",
            "chroot_command_wrapper": "sudo {{.Command}}",
            "chroot_disk_size": "{{user `disk_size`}}",
            "image_name": "{{user `image_name`}}",
            "image_description": "{{user `image_description`}}",
            "state_timeout": "{{user `state_timeout`}}",
            "pre_mount_commands": [
                "mkdir -p /etc/systemd/system/getty@tty1.service.d/",
                "echo \"[Service]\" | sudo tee /etc/systemd/system/getty@tty1.service.d/override.conf",
                "echo \"ExecStart=\" | sudo tee -a /etc/systemd/system/getty@tty1.service.d/override.conf",
                "echo \"ExecStart=-/sbin/agetty --autologin root --noclear %I $TERM\" | sudo tee -a /etc/systemd/system/getty@tty1.service.d/override.conf",
                "echo \"Type=idle\" | sudo tee -a /etc/systemd/system/getty@tty1.service.d/override.conf",
                "systemctl daemon-reload",
                "systemctl restart getty@tty1.service",
                "[ ! -e '/etc/rpm/macros.dist' ] || sudo yum install -y \"https://dl.fedoraproject.org/pub/epel/epel-release-latest-$(awk '/rhel/ {print $2}' /etc/rpm/macros.dist).noarch.rpm\"",
                "yum install -y --setopt=skip_missing_names_on_install=False mtools libgcrypt dosfstools wget pv qemu-img",
                "modprobe kvm",
                "sgdisk -Z {{.Device}}",
                "sgdisk -n 1:0:+50MB -t 1:EF01 -c 1:EFI {{.Device}}",
                "sgdisk -n 2:0:+50MB -t 2:0700 -c 2:CLOUDMD {{.Device}}",
                "sgdisk -n 3:0:+1MB  -t 3:EF02 -c 3:BIOS {{.Device}}",
                "sgdisk -n 4:0:-0    -t 4:8300 -c 4:ROOT {{.Device}} -A 4:set:2",
                "gdisk -l {{.Device}}",
                "sleep 2",
                "mkfs.fat {{.Device}}1 -n EFI",
                "mkfs.fat {{.Device}}2 -n CLOUDMD",
                "mkfs.{{user `root_fs`}} {{user `root_fs_opts`}} {{.Device}}4"
            ],
            "chroot_mounts": [
                [
                    "proc",
                    "proc",
                    "/proc"
                ],
                [
                    "sysfs",
                    "sysfs",
                    "/sys"
                ],
                [
                    "bind",
                    "/dev",
                    "/dev"
                ],
                [
                    "devpts",
                    "devpts",
                    "/dev/pts"
                ],
                [
                    "binfmt_misc",
                    "binfmt_misc",
                    "/proc/sys/fs/binfmt_misc"
                ]
            ],
            "post_mount_commands": [
                "mkdir -p {{.MountPath}}/boot/efi",
                "mount -t vfat {{.Device}}1 {{.MountPath}}/boot/efi",
                "mkdir /home/guru/image-tmpfs",
                "mount -t tmpfs -o size=1g tmpfs /home/guru/image-tmpfs",
                "wget -nv https://cloud-images.ubuntu.com/releases/oracular/release/ubuntu-24.10-server-cloudimg-amd64.img -O /home/guru/image-tmpfs/image.qcow",
                "mkdir /home/guru/mnt-image",
                "modprobe nbd",
                "qemu-nbd -c /dev/nbd0 /home/guru/image-tmpfs/image.qcow",
                "partprobe /dev/nbd0",
                "mkdir -p /home/guru/mnt-image",
                "mount /dev/nbd0p1 /home/guru/mnt-image",
                "mount /dev/nbd0p13 /home/guru/mnt-image/boot",
                "setenforce 0",
                "rsync -aH  --inplace -W --numeric-ids -A -v /home/guru/mnt-image/ {{.MountPath}}/ | pv -l -c -n -i 30 -t >/dev/null",
                "umount /home/guru/mnt-image/boot",
                "umount /home/guru/mnt-image",
                "qemu-nbd -d /dev/nbd0",
                "umount /home/guru/image-tmpfs"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": "{{user `scripts`}}",
            "environment_vars": [
                "SCOPE_NAME={{user `scope_name`}}",
                "REPOSITORY={{user `repository`}}",
                "CLI_PACKAGE={{user `cli_package`}}"
            ]
        }
    ]
}